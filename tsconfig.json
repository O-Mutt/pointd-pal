{
	"compilerOptions": {
		"target": "ES6" ,
		"module": "commonjs" ,
		"rootDir": "./",
		"paths": {
			"@config": ["./src/config/index.ts"],
			"@/services/*": ["./src/lib/services/*"],
			"@/*": ["./src/*"],
			"@/app": ["./app.ts"]
		},
		"resolveJsonModule": true ,
		"sourceMap": true ,
		"outDir": "./dist" ,
		"esModuleInterop": true ,
		"forceConsistentCasingInFileNames": true ,
		"strict": true ,
		"noImplicitAny": false ,
		"strictPropertyInitialization": false ,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*.ts",
		"prettier.config.mjs",
		"*.ts",
		"*.mjs"
	],
}
